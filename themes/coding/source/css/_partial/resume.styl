@import "resume-laptop"
 @media print {
   html {
     font-size: 12px; }
 
   .print {
     display: none; } 

    footer{
      display: none;
    }
   
 }
 
 .container {
   margin-left: auto;
   margin-right: auto;
   margin-bottom: 1rem;
   max-width: 45rem;
   text-align: left; 
 }
 
 .contact-item:a {
   color: inherit;
   text-decoration: none; 
 }
 
 .section-title {
   font-weight: bolder;
   text-align: left;
   text-transform: uppercase;
   border-bottom: 0.1rem solid #adb5bd;
 }
 
 .block:last-child {
   margin-bottom: 0; 
 }
 
 .block-title {
   font-weight: bold; 
 }
 
 .block-subtitle {
   font-weight: bold;
 }
 
 footer {
   color: #adb5bd;
   line-height: 1.5rem;
 }
